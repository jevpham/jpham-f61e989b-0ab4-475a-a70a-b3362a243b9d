# =============================================================================
# Secure Task Management System - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control
# =============================================================================

# Database (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=taskdb
DATABASE_USER=postgres
DATABASE_PASSWORD=CHANGE_ME_use_strong_password

# Database Pool Configuration
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_CONNECTION_TIMEOUT=30000

# JWT Configuration
# =============================================================================
# SECURITY: Generate secrets using:
#   node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
#
# IMPORTANT:
#   - Must be different secrets for access and refresh tokens
#   - Minimum 32 characters (64+ recommended for production)
#   - Never reuse across environments
# =============================================================================
JWT_ACCESS_SECRET=CHANGE_ME_generate_64_char_random_secret_see_above
JWT_REFRESH_SECRET=CHANGE_ME_generate_different_64_char_secret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Application
PORT=3000
FRONTEND_URL=http://localhost:4200
NODE_ENV=development

# Rate Limiting (optional overrides)
# THROTTLE_TTL=60000
# THROTTLE_LIMIT=100
